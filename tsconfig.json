{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist/esm",
        "declaration": true,
        "module": "ESNext",
        "target": "ES2017",
        "moduleResolution": "Node",
        "emitDeclarationOnly": false,
        "rootDir": "src"
    },
    "exclude": ["dist", "node_modules", "tsup.config.ts"]
}
